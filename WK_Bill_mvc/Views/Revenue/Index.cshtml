@using Domain.WK_Dto.RevenueDto
@model IEnumerable<AddRevenueDto>;
@{
    ViewData["Title"] = "支出列表";
}

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">收入类型</th>
        <th scope="col">用户名</th>
        <th scope="col">金额</th>
        <th scope="col">收入时间</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var r in Model)
    {
        <tr>
            <th scope="row">@r.BillTypeId</th>
            <td>@r.Id</td>
            <td>@r.Money</td>
            <td>@r.RevenueDate</td>
            <td>
                <form asp-action="DeleteRevenue" asp-route-id="@r.Id" method="post">
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('确认删除?')">删除</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
    
    <a asp-action="AddRevenue" class="btn btn-danger">添加收支</a>
</table>
